<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.seller66">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Seller66">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Seller66.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.cliente.ClienteActivity"
            android:label="@string/clientes"
            android:theme="@style/Theme.Seller66.NoActionBar"/>
        <activity
            android:name=".ui.produto.ProdutoActivity"
            android:label="@string/produtos"
            android:theme="@style/Theme.Seller66.NoActionBar"/>
        <activity
            android:name=".ui.confirmacao.ConfirmacaoActivity"
            android:label="@string/confirmacao"
            android:theme="@style/Theme.Seller66.NoActionBar"/>
</application>
</manifest>